<div id="results">
<h1>Recipes</h1>
  <% if @recipes.any? %>
      <% @recipes.each do |recipe| %>
          <%= recipe.name %>
            <ul>
              <% if recipe.ingredients.any? %>
                <% recipe.ingredients.each do |ingredient| %>
                  <%= ingredient.name %>
              <% end %>
            </ul>
              <% else %>
                <span>No ingredients available</span>
              <% end %>
            <i class="fa-solid fa-plus"></i>
        </li>
      <% end %>
    </ul>
  <% end %>
</div>
